<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="395.0" prefWidth="239.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cliente.TelaPrincipalController">
   <children>
      <TextField fx:id="txNome" minHeight="50.0" promptText="Digite o Nome" />
      <TextField fx:id="txMens" alignment="CENTER" prefHeight="50.0" promptText="Digite uma mensagem">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </TextField>
      <Button fx:id="btEnviar" disable="true" mnemonicParsing="false" onAction="#clkBtEnviar" prefHeight="50.0" prefWidth="244.0" text="Enviar">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Button fx:id="btConectar" mnemonicParsing="false" onAction="#clkBtConectar" prefHeight="50.0" prefWidth="241.0" text="Conectar">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Button fx:id="btDesconectar" disable="true" mnemonicParsing="false" onAction="#clkBtDesconectar" prefHeight="50.0" prefWidth="239.0" text="Desconectar">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Label fx:id="lbStatus" prefHeight="76.0" prefWidth="239.0" text="Desconectado" textAlignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </children>
</VBox>
